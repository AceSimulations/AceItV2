    var wrapperCount = 0
  
    socket.on('post-in-socket', (name, title, message, rating) => {
      wrapperCount++
      var wrapper = document.createElement('div')
      wrapper.style.display = 'inline-block'
      wrapper.style.marginRight = '20px'
      wrapper.style.height = "140px"
      wrapper.style.width = "275px"
      wrapper.style.float = "left"
      wrapper.style.borderRadius = "15px"
      wrapper.style.backgroundColor = "#f6f6f6"
      wrapper.style.paddingTop = "0px"
      wrapper.style.padding = "15px"
      wrapper.style.marginBottom = "10px"
      wrapper.id = "wrapper" + wrapperCount
      document.getElementById('comments-box').appendChild(wrapper)
      
      var stars = document.createElement('img')
      stars.src = 'stars/' + rating + 'stars.png'
      stars.style.width = "200px"
      stars.style.marginBottom = "15px"
      document.getElementById('wrapper' + wrapperCount).appendChild(stars)

      var userName = document.createElement('p')
      userName.style.fontFamily = "SF Pro"
      userName.innerHTML = name
      userName.style.color = "#bcbcbc"
      userName.style.fontSize = "16px"
      userName.style.margin = "0px"
      document.getElementById('wrapper' + wrapperCount).appendChild(userName)

      var messageTitle = document.createElement('p')
      messageTitle.style.fontFamily = "SF Pro"
      messageTitle.innerHTML = title
      messageTitle.style.margin = "0px"
      messageTitle.style.marginTop = "15px"
      messageTitle.style.fontSize = "20px"
      document.getElementById('wrapper' + wrapperCount).appendChild(messageTitle)

      var actualMessage = document.createElement('p')
      actualMessage.style.fontFamily = 'SF Pro Light'
      actualMessage.innerHTML = message
      actualMessage.style.fontSize = "20px"
      actualMessage.style.margin = "0px"
      actualMessage.style.marginTop = "3px"
      actualMessage.style.textOverflow = 'ellipsis'
      actualMessage.style.height = "22px"
      actualMessage.style.width = "100%"
      actualMessage.style.overflow = "hidden"
      actualMessage.style.whiteSpace = "nowrap"
      document.getElementById('wrapper' + wrapperCount).appendChild(actualMessage)
